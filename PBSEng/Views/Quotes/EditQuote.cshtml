@model PBSDAL.Entity.Quotes

@{
    ViewBag.Title = "EditQuote";
}


<section class="content">
    <!-- SELECT2 EXAMPLE -->
    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Add New Quote</h3>            
        </div><!-- /.box-header -->
    @using (Html.BeginForm())
            {
    <div class="box-body">            
                @Html.AntiForgeryToken()
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-6" style="direction:ltr">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Quote)
                            @Html.EditorFor(model => model.Quote, new { htmlAttributes = new { @class = "form-control select2", placeholder = "Enter your quote here" } })
                            @Html.ValidationMessageFor(model => model.Quote, "", new { @class = "text-danger" })
                        </div><!-- /.form-group -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.Author)
                            @Html.TextAreaFor(model => model.Author, new { @class = "form-control select2", rows = "3", placeholder = "Enter the Author Name" })
                            @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
                        </div>

                    </div><!-- /.col -->
                    <div class="col-md-6" style="direction:rtl;">
                        <div class="form-group">
                            @Html.LabelFor(model => model.AR_Quote)
                            @Html.EditorFor(model => model.AR_Quote, new { htmlAttributes = new { @class = "form-control select2", placeholder = "اقتبس" } })
                            @Html.ValidationMessageFor(model => model.AR_Quote, "", new { @class = "text-danger" })
                        </div><!-- /.form-group -->
                        <div class="form-group">
                            @Html.LabelFor(model => model.AR_Author)
                            @Html.TextAreaFor(model => model.AR_Author, new { @class = "form-control select2", rows = "3", placeholder = "مؤلف" })
                            @Html.ValidationMessageFor(model => model.AR_Author, "", new { @class = "text-danger" })
                        </div><!-- /.form-group -->
                    </div><!-- /.col -->                    
                </div><!-- /.row -->
                <div class="box-footer">
                    <div class="box-tools pull-right">
                        <input type="submit" value="تحديث (Update)" class="btn btn-info" />
                    </div>
                    <div class="box-tools pull-left">
                        <a href="@Url.Action("Index", "Quotes")" class="btn btn-success"><i class="fa fa-list-alt" aria-hidden="true"> قائمة (Event List) </i></a>
                    </div>
                </div>            
        </div><!-- /.box-body -->
    }
        
    </div><!-- /.box -->
</section>