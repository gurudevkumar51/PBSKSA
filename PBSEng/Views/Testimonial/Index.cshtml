@model IEnumerable<PBSDAL.Entity.Testimonial>

@{
    ViewBag.Title = "Index";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Portfolio List</h3>
                    <div class="box-tools pull-right">
                        <a href="@Url.Action("AddTestimonial", "Testimonial")" class="btn btn-success"><i class="fa fa-plus-circle" aria-hidden="true"> Add Testimonial </i></a>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="TestimonialTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Author)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ar_Author)
                                </th>                                                                
                                <th>
                                    @Html.DisplayNameFor(model => model.Author_Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Image_Path)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Resource_Link)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ar_Description)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Author)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ar_Author)
                                    </td>                                                                      
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Author_Date)
                                    </td>
                                    <td>
                                        <img src="~/imagesMVC/TestimonialThumbnail/@item.thumbnailPath" width="40" height="40" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Resource_Link)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ar_Description)
                                    </td>                                    
                                    <td>
                                        <a href="@Url.Action("EditTestimonial", "Testimonial", new { id = item.ID })" class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                                        <a href="@Url.Action("DeleteTestimonial", "Testimonial", new { id = item.ID })" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#TestimonialTable').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });

</script>