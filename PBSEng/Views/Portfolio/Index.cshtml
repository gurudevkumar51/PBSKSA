@model IEnumerable<PBSDAL.Entity.Portfolio>

@{
    ViewBag.Title = "Index";
}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Portfolio List</h3>
                    <div class="box-tools pull-right">
                        <a href="@Url.Action("AddPortfolio", "Portfolio")" class="btn btn-success"><i class="fa fa-plus-circle" aria-hidden="true"> Add Portfolio </i></a>
                    </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="PortfolioTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AR_Title)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Location_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.AR_Location_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model._Date)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Image_Path)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Added_Date)
                                </th>                                
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AR_Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Location_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AR_Location_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item._Date)
                                    </td>
                                    <td>                                        
                                        <img src="~/imagesMVC/PortfolioThumbnail/@item.thumbnailPath" width="50" height="50" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Added_Date)
                                    </td>                                    
                                    <td>
                                        <a href="@Url.Action("EditPortfolio", "Portfolio", new { id = item.ID })" class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                                        <a href="@Url.Action("DeletePortfolio", "Portfolio", new { id = item.ID })" class="btn btn-danger"><i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section>

<script>
    $(function () {
        $('#PortfolioTable').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false
        });
    });

</script>